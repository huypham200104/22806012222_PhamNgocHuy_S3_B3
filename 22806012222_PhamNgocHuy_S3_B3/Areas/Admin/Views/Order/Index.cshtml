@model IEnumerable<_22806012222_PhamNgocHuy_S3_B3.Models.Order>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="mb-4">Quản Lý Đơn Hàng</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Người Dùng</th>
                            <th scope="col">Ngày Đặt</th>
                            <th scope="col">Tổng Giá</th>
                            <th scope="col">Địa Chỉ Giao Hàng</th>
                            <th scope="col">Ghi Chú</th>
                            <th scope="col">Hành Động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.UserId</td>
                                <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@order.TotalPrice.ToString("C")</td>
                                <td>@order.ShippingAddress</td>
                                <td>@order.Notes</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm">Chi Tiết</a>
                                    <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc muốn xóa đơn hàng này?')">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-info text-center" role="alert">
                    Hiện tại không có đơn hàng nào.
                </div>
            }
        </div>
    </div>
</div>

