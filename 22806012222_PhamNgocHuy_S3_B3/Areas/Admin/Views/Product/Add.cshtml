@model _22806012222_PhamNgocHuy_S3_B3.Models.Product
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin: 20px auto; width: 90%; font-family: Arial, sans-serif;">
    <h2 style="color: #0077CC;">Add Product</h2>

    <form action="@Url.Action("Add")" method="post" enctype="multipart/form-data">
        <div style="margin-bottom: 15px;">
            <label for="Name" style="font-weight: bold; display: block;">Name</label>
            <input id="Name" name="Name" value="@Model?.Name" style="width: 100%; padding: 5px;" />
            <span style="color: red; display: block;">@Html.ValidationMessageFor(m => m.Name)</span>
        </div>

        <div style="margin-bottom: 15px;">
            <label for="Price" style="font-weight: bold; display: block;">Price</label>
            <input id="Price" name="Price" type="number" step="0.01" value="@Model?.Price" style="width: 100%; padding: 5px;" />
            <span style="color: red; display: block;">@Html.ValidationMessageFor(m => m.Price)</span>
        </div>

        <div style="margin-bottom: 15px;">
            <label for="Description" style="font-weight: bold; display: block;">Description</label>
            <textarea id="Description" name="Description" style="width: 100%; padding: 5px; height: 100px;">@Model?.Description</textarea>
            <span style="color: red; display: block;">@Html.ValidationMessageFor(m => m.Description)</span>
        </div>

        <div style="margin-bottom: 15px;">
            <label for="CategoryId" style="font-weight: bold; display: block;">Category</label>
            <select id="CategoryId" name="CategoryId" style="width: 100%; padding: 5px;">
                @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.Categories)
                {
                    <option value="@item.Value" selected="@(item.Value == Model?.CategoryId.ToString() ? "selected" : null)">@item.Text</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label asp-for="ImageUrl">Upload Image</label>
            <input type="file" name="ImageUrl" class="form-control" />
        </div>

        <button type="submit" style="padding: 8px 15px; background-color: #28A745; color: white; border: none; cursor: pointer;">Add</button>
    </form>
</div>