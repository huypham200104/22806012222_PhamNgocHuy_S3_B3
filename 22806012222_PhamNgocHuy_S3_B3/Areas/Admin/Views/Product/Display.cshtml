@model _22806012222_PhamNgocHuy_S3_B3.Models.Product


@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin: 20px auto; width: 90%; font-family: Arial, sans-serif;">
    <h2 style="color: #0077CC;">@Model.Name</h2>
    <div>
        <h3 style="color: #333;">Price: @(Model.Price.ToString("C", new System.Globalization.CultureInfo("en-US")))</h3>
        <p style="line-height: 1.5;">@Model.Description</p>
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="Product Image" style="max-width: 200px; border: 1px solid #ccc;" />
        }
    </div>
    <a href="@Url.Action("Index")" style="display: inline-block; padding: 8px 15px; background-color: #6C757D; color: white; text-decoration: none; margin-top: 15px;">Back to List</a>
</div>